{
  "compilerOptions": {
    "lib": ["es2019"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "public",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["database", "api"]
}
